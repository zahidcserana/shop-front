{
  "name": "pharmacy-erp",
  "productName": "PHARMACY ERP",
  "description": "SMART PHARMACY ERP",
  "version": "3.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "export NODE_OPTIONS=--openssl-legacy-provider \n ng serve",
    "build": "export NODE_OPTIONS=--openssl-legacy-provider \n ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron-build": "ng build --prod",
    "electron": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . SMART PHARMACY ERP --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"PHARMACYERP\"",
    "package-linux": "electron-packager . pharmacy-erp --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/Electron\\ tutorial\\ app-darwin-x64/Electron\\ tutorial\\ app.app pharmacy-erp --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
    "create-installer-win": "node createinstaller.js",
    "create-debian-installer": "electron-installer-debian --src release-builds/pharmacy-erp-linux-x64/ --arch amd64 --config debian.json"
  },
  "private": true,
